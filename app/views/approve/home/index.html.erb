<div class="row events">
  <% @events.each do |event| %>
    <div class="col-sm-3 col-xs-6 event">
      <a class="thumbnail" href="<%= approve_event_body_path(event.uniq_id) %>">
        <img src="<%= event.image.url(:large) %>" alt="<%= event.title %>">
        <div class="caption">
          <h3><%= event.title %></h3>
        </div>
      </a>
    </div>
  <% end %>
</div>